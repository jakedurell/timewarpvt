{
  "manifest_version": 3,
  "name": "Time Warp VT",
  "version": "1.0.0",
  "description": "Assists with time entry",
  "short_name": "Time Warp VT",
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "downloads",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.erp.state.vt.us/*"
      ],
      "js": [
        "jquery.min.js"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "externally_connectable": {
    "ids": [
      "*"
    ]
  }
}