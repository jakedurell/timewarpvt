{
  "manifest_version": 2,
  "name": "Time Warp VT",
  "version": "1.0.0",
  "description": "Assists with time entry",
  "short_name": "Time Warp VT",
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "downloads",
    "webNavigation"
  ],
  "background": {
    "scripts": ["background.js", "jquery.min.js"],
    "persistent": true
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.erp.state.vt.us/*"],
      "js": ["jquery.min.js"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "externally_connectable": {
    "ids": ["*"]
  }
}
